.st-widget
  min-height 300px
  &__image
    min-height 200px
    background-color #efefef
    &-container 
      width 100%
      height 100%
      img 
        margin 0px auto
        padding 50px
    &-button
      display none
    h2
      text-align center
      padding 30px
    label 
      width 200px
      height 60px
      border-radius 6px
      background-color rgba(66,133,244,0.82)
      text-align center
      color #fff
      display block
      margin 0px auto
      padding 20px
      cursor pointer
      &:hover
        background-color rgba(66,133,244,0.72)
      
      
        