// Format bar
.st-format-bar
  position absolute
  margin -3em 0 0 0
  background #4d5358
  opacity 0
  visibility hidden
  z-index 10
  border-radius 0.4em
  padding 0

  &:before
    content ''
    display block
    position absolute
    left 50%
    top 2.12em
    width 0
    height 0
    border-left 12px solid transparent
    border-right 12px solid transparent
    border-top 12px solid #4d5358
    margin-left -12px

  &--is-ready
    opacity 1
    visibility visible
    width 214px

.st-format-btn
  color #fff
  border 0
  padding 10px
  font-size 14px
  background transparent
  vertical-align middle
  border-right 1px solid #3e4245

  &:last-child
    border-right none

  &:hover,
  &--is-active
    color $m-cyan
    font-weight bold

  &--Italic
    font-style italic

  &--Unlink
    text-decoration line-through